<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Participants</h1>
  </div>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Profile</th>
    </tr>
  </thead>

  <tbody>
    <% @event.participant.each do |participant| %>
    <tr>
      <td><%= participant.first_name %></td>
      <td><%= participant.last_name %></td>
      <td><%= participant.email %></td>
      <td><%= link_to "Profile", user_path(participant.id) %></td>
    <% end %>
    </tr>
  </tbody>

  <%= link_to "Modify", edit_event_path(@event.id), class: "btn btn-primary" %>
